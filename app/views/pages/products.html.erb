<script>

  const boxOne = document.getElementById('box1')
  const boxTwo = document.getElementById('box2')
  const boxThree = document.getElementById('box3')
  const boxFour = document.getElementById('box4')
  const boxFive = document.getElementById('box5')
  const boxSix = document.getElementById('box6')
  const boxSeven = document.getElementById('box7')
  const boxEight = document.getElementById('box8')

  const boxOneTop = boxOne.getBoundingClientRect().top;
  const boxTwoTop = boxTwo.getBoundingClientRect().top;
  const boxThreeTop = boxThree.getBoundingClientRect().top;
  const boxFourTop = boxFour.getBoundingClientRect().top;
  const boxFiveTop = boxFive.getBoundingClientRect().top;
  const boxSixTop = boxSix.getBoundingClientRect().top;
  const boxSevenTop = boxSeven.getBoundingClientRect().top;
  const boxEightTop = boxEight.getBoundingClientRect().top;

  window.onscroll = function(){
    boxOne.style.top = boxOneTop - window.pageYOffset*2 + "px"
    boxTwo.style.top = boxTwoTop - window.pageYOffset/5 + "px"
    boxThree.style.top = boxThreeTop - window.pageYOffset + "px"
    boxFour.style.top = boxFourTop - window.pageYOffset*1.5 + "px"
    boxFive.style.top = boxFiveTop - window.pageYOffset/3 + "px"
    boxSix.style.top = boxSixTop - window.pageYOffset/5 + "px"
    boxSeven.style.top = boxSevenTop - window.pageYOffset/4 + "px"
    boxEight.style.top = boxEightTop - window.pageYOffset*1.5 + "px"
  }

 </script>
